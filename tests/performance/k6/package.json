{
  "name": "momentum-k6-performance-tests",
  "version": "1.0.0",
  "description": "k6 performance tests for .NET microservices",
  "private": true,
  "scripts": {
    "k6": "docker run --rm --network host -v $(pwd):/scripts -w /scripts -e K6_WEB_DASHBOARD=true grafana/k6 run",
    "test:local": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-local-realistic-workflow-report.html scenarios/mixed/realistic-workflow.js",
    "test:staging": "bun run k6 -e ENVIRONMENT=staging -e K6_WEB_DASHBOARD_EXPORT=../results/k6-staging-realistic-workflow-report.html scenarios/mixed/realistic-workflow.js",
    "test:cashiers": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-cashiers-baseline-report.html scenarios/cashiers/baseline.js",
    "test:cashiers:grpc": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-cashiers-grpc-baseline-report.html scenarios/cashiers/baseline-grpc.js",
    "test:cashiers:simple": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-cashiers-simple-create-report.html scenarios/cashiers/simple-create.js",
    "test:cashiers:grpc:simple": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-cashiers-grpc-simple-create-report.html scenarios/cashiers/simple-create-grpc.js",
    "test:cashiers:stress": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-cashiers-stress-report.html scenarios/cashiers/stress.js",
    "test:cashiers:grpc:stress": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-cashiers-grpc-stress-report.html scenarios/cashiers/stress-grpc.js",
    "test:cashiers:spike": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-cashiers-spike-report.html scenarios/cashiers/spike.js",
    "test:invoices": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-invoices-baseline-report.html scenarios/invoices/baseline.js",
    "test:mixed": "bun run k6 -e K6_WEB_DASHBOARD_EXPORT=../results/k6-mixed-realistic-workflow-report.html scenarios/mixed/realistic-workflow.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
