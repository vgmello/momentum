{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "AppDomain": "Debug",
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Sixteen, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "AppDomainDb": "Host=localhost;Port=54320;Database=app_domain;password=password@;username=postgres;",
    "ServiceBus": "Host=localhost;Port=54320;Database=service_bus;password=password@;username=postgres;",
    //#if (USE_KAFKA)
    "Messaging": "localhost:59092"
    //#endif
  },
  //#if (USE_KAFKA)
  "Aspire": {
    "Confluent": {
      "Kafka": {
        "Producer": {
          "Messaging": {
            "Config": {
              "Acks": "All",
              "EnableIdempotence": true,
              "CompressionType": "Snappy",
              "BatchSize": 16384
            }
          }
        },
        "Consumer": {
          "Config": {
            "AutoOffsetReset": "Latest",
            "EnableAutoCommit": true,
            "AutoCommitIntervalMs": 1000
          }
        },
        "Security": {
          "Protocol": "Plaintext"
        }
      }
    }
  },
  //#endif
  "ServiceBus": {
    "Wolverine": {
      "CodegenEnabled": true,
      //#if (USE_KAFKA)
      "AutoProvision": true
      //#endif
    }
  },
  "OpenTelemetry": {
    "SamplingRate": 1.0
  },
  "HttpResilience": {
    "Retry": {
      "MaxRetryAttempts": 2,
      "Delay": "00:00:01",
      "BackoffType": "Exponential"
    },
    "TotalRequestTimeout": {
      "Timeout": "00:00:30"
    },
    "AttemptTimeout": {
      "Timeout": "00:00:10"
    }
  }
}
