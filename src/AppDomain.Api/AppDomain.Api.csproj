    <ItemGroup>
        <InternalsVisibleTo Include="AppDomain.Tests"/>
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Program.Public.cs">
            <DependentUpon>Program.cs</DependentUpon>
        </Compile>
    </ItemGroup>

</Project>
