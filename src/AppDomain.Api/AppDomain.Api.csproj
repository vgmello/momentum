    <ItemGroup>
        <ProjectReference Include="..\AppDomain\AppDomain.csproj"/>
        <!--#if (libs == defaults) -->
        <ProjectReference Include="..\..\libs\Momentum\src\Momentum.ServiceDefaults\Momentum.ServiceDefaults.csproj"/>
