<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <UserSecretsId>4d1e9d4f-ee8a-4d91-8c2b-11e09987ac0b</UserSecretsId>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Grpc.AspNetCore"/>
        <PackageReference Include="Grpc.Tools"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AppDomain\AppDomain.csproj"/>
    </ItemGroup>

    <!-- Conditional ServiceDefaults.Api library -->
    <!--#if (includeLibApi) -->
    <ItemGroup>
        <ProjectReference Include="..\..\libs\Momentum\src\Momentum.ServiceDefaults.Api\Momentum.ServiceDefaults.Api.csproj"/>
    </ItemGroup>
    <!--#else -->
    <ItemGroup>
        <PackageReference Include="Momentum.ServiceDefaults.Api"/>
    </ItemGroup>
    <!--#endif -->

    <!-- Conditional ServiceDefaults library -->
    <!--#if (includeLibDefaults) -->
    <ItemGroup>
        <ProjectReference Include="..\..\libs\Momentum\src\Momentum.ServiceDefaults\Momentum.ServiceDefaults.csproj"/>
    </ItemGroup>
    <Import Project="..\..\libs\Momentum\src\Momentum.ServiceDefaults\Momentum.ServiceDefaults.props"/>
    <!--#else -->
    <ItemGroup>
        <PackageReference Include="Momentum.ServiceDefaults"/>
    </ItemGroup>
    <!--#endif -->

    <ItemGroup>
        <Protobuf Include="**/Protos/**/*.proto" ProtoRoot="." GrpcServices="Server"/>
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="AppDomain.Tests"/>
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Program.Public.cs">
            <DependentUpon>Program.cs</DependentUpon>
        </Compile>
    </ItemGroup>

</Project>