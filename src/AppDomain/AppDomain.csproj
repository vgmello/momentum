<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <DbCommandDefaultParamCase>SnakeCase</DbCommandDefaultParamCase>
        <DbCommandParamPrefix>p_</DbCommandParamPrefix>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Aspire.Npgsql"/>
        <PackageReference Include="Npgsql"/>
        <PackageReference Include="Riok.Mapperly" />
        <PackageReference Include="linq2db.AspNet"/>
    </ItemGroup>

    <ItemGroup>
        <AssemblyAttribute Include="Momentum.Extensions.Abstractions.Messaging.DefaultDomainAttribute">
            <Domain>AppDomain</Domain>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Momentum.Extensions.Abstractions"/>
        <!--#if (!includeLibExt) -->
        <PackageReference Include="Momentum.Extensions"/>
        <!--#endif -->
        <!--#if (!includeLibGenerators) -->
        <PackageReference Include="Momentum.Extensions.SourceGenerators"/>
        <!--#endif -->
    </ItemGroup>

    <ItemGroup>
        <!--#if (includeLibExt) -->
        <ProjectReference Include="..\..\libs\Momentum\src\Momentum.Extensions\Momentum.Extensions.csproj"/>
        <!--#endif -->
        <!--#if (includeLibGenerators) -->
        <ProjectReference Include="..\..\libs\Momentum\src\Momentum.Extensions.SourceGenerators\Momentum.Extensions.SourceGenerators.csproj"
                          OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
        <!--#endif -->
    </ItemGroup>

    <ItemGroup>
        <!--#if (includeLibExt) -->
        <Import Project="..\..\libs\Momentum\src\Momentum.Extensions\Momentum.Extensions.props" />
        <!--#endif -->
        <!--#if (includeLibGenerators) -->
        <Import Project="..\..\libs\Momentum\src\Momentum.Extensions.SourceGenerators\Momentum.Extensions.SourceGenerators.props" />
        <!--#endif -->
    </ItemGroup>
</Project>
