<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!--#if (USE_PGSQL)-->
        <DbCommandDefaultParamCase>SnakeCase</DbCommandDefaultParamCase>
        <DbCommandParamPrefix>p_</DbCommandParamPrefix>
        <!--#endif-->
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <!--#if (USE_PGSQL)-->
        <PackageReference Include="Aspire.Npgsql"/>
        <PackageReference Include="Npgsql"/>
        <!--#endif-->
        <PackageReference Include="Riok.Mapperly" />
        <PackageReference Include="linq2db.AspNet"/>
    </ItemGroup>

    <ItemGroup>
        <AssemblyAttribute Include="Momentum.Extensions.Abstractions.Messaging.DefaultDomainAttribute">
            <Domain>AppDomain</Domain>
        </AssemblyAttribute>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Momentum.Extensions.Abstractions"/>
        <!--#if (libs != ext) -->
        <PackageReference Include="ImportableMomentumExtensions.Extensions"/>
        <!--#endif -->
        <!--#if (libs != generators) -->
        <PackageReference Include="ImportableMomentumSourceGenerators.Extensions.SourceGenerators"/>
        <!--#endif -->
    </ItemGroup>

    <!--#if (libs != none) -->
    <ItemGroup>
        <!--#if (libs == ext) -->
        <ProjectReference Include="..\..\libs\ImportableMomentumExtensions\src\ImportableMomentumExtensions.Extensions\ImportableMomentumExtensions.Extensions.csproj"/>
        <!--#endif -->
        <!--#if (libs == generators) -->
        <ProjectReference Include="..\..\libs\ImportableMomentumSourceGenerators\src\ImportableMomentumSourceGenerators.Extensions.SourceGenerators\ImportableMomentumSourceGenerators.Extensions.SourceGenerators.csproj"
                          OutputItemType="Analyzer" ReferenceOutputAssembly="false"/>
        <!--#endif -->
    </ItemGroup>
    <!--#endif -->

    <!--#if (libs == ext) -->
    <Import Project="..\..\libs\ImportableMomentumExtensions\src\ImportableMomentumExtensions.Extensions\ImportableMomentumExtensions.Extensions.props" />
    <!--#endif -->
    <!--#if (libs == generators) -->
    <Import Project="..\..\libs\ImportableMomentumSourceGenerators\src\ImportableMomentumSourceGenerators.Extensions.SourceGenerators\ImportableMomentumSourceGenerators.Extensions.SourceGenerators.props" />
    <!--#endif -->
</Project>
