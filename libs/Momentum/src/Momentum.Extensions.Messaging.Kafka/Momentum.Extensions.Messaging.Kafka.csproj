<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <IsPackable>true</IsPackable>
        <PackageId>Momentum.Extensions.Messaging.Kafka</PackageId>
        <PackageDescription>Kafka messaging integration for Momentum platform providing event-driven communication through Apache Kafka with CloudEvents, WolverineFx, and OpenTelemetry support.</PackageDescription>
        <PackageProjectUrl>https://github.com/vgmello/momentum/blob/main/libs/Momentum/src/Momentum.Extensions.Messaging.Kafka/README.md</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Aspire.Confluent.Kafka"/>
        <PackageReference Include="CloudNative.CloudEvents.Kafka"/>
        <PackageReference Include="WolverineFx.Kafka"/>
        <PackageReference Include="Confluent.Kafka.Extensions.OpenTelemetry"/>
        <PackageReference Include="Momentum.ServiceDefaults" Condition="'$(LibsKafka)' == 'True' And '$(LibsDefaults)' == 'False'"/>
    </ItemGroup>

    <ItemGroup Condition="'$(LibsKafka)' == 'False' Or '$(LibsDefaults)' == 'True'">
        <ProjectReference Include="..\Momentum.ServiceDefaults\Momentum.ServiceDefaults.csproj"/>
    </ItemGroup>

</Project>
