<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>Operations.Extensions</PackageId>
        <PackageDescription>Core extensions library for Operations platform providing common utilities, result types, messaging abstractions, and data access helpers. Includes integrations with Dapper, FluentValidation, OneOf, and WolverineFx.</PackageDescription>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/vgmello/momentum-sample/blob/main/libs/Operations/src/Operations.Extensions/README.md</PackageProjectUrl>
        <PackageTags>operations;extensions;dapper;fluentvalidation;wolverine;messaging;result</PackageTags>
        <PackageReleaseNotes>https://github.com/vgmello/momentum-sample/releases/tag/v$(PackageVersion)</PackageReleaseNotes>
    </PropertyGroup>

    <!-- if (!LocalLibs) -->
    <ItemGroup>
        <None Include="Operations.Extensions.props" Pack="true" PackagePath="build/" />
    </ItemGroup>
    <!-- endif -->

    <ItemGroup>
        <PackageReference Include="FluentValidation"/>
        <PackageReference Include="linq2db" />
        <PackageReference Include="OneOf"/>
        <PackageReference Include="OneOf.SourceGenerator"/>
        <PackageReference Include="Dapper"/>
        <PackageReference Include="WolverineFx"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Operations.Extensions.Abstractions\Operations.Extensions.Abstractions.csproj"/>
    </ItemGroup>

</Project>
